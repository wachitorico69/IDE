   <property name="shortcut"><string>Ctrl+-</string></property>
  </action>

  <!-- BUILD & DEBUG ACTIONS -->
  <action name="actionBuildProject">
   <property name="text"><string>Build Project</string></property>
   <property name="shortcut"><string>Ctrl+B</string></property>
  </action>

  <action name="actionRebuild">
   <property name="text"><string>Rebuild</string></property>
   <property name="shortcut"><string>Ctrl+Shift+B</string></property>
  </action>

  <action name="actionClean">
   <property name="text"><string>Clean</string></property>
  </action>

  <action name="actionBuildSolution">
   <property name="text"><string>Build Solution</string></property>
  </action>

  <action name="actionStartDebugging">
   <property name="text"><string>Start Debugging</string></property>
   <property name="shortcut"><string>F5</string></property>
  </action>

  <action name="actionStartWithoutDebugging">
   <property name="text"><string>Start Without Debugging</string></property>
   <property name="shortcut"><string>Ctrl+F5</string></property>
  </action>

  <action name="actionStopDebugging">
   <property name="text"><string>Stop Debugging</string></property>
   <property name="shortcut"><string>Shift+F5</string></property>
  </action>

  <action name="actionRestartDebugging">
   <property name="text"><string>Restart Debugging</string></property>
  </action>

  <action name="actionAttachProcess">
   <property name="text"><string>Attach to Process</string></property>
  </action>

 </widget>

