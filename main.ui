<?xml version="1.0" encoding="UTF-8"?>
<ui version="4.0">
<class>MainWindow</class>
 <!-- ========================= MAIN WINDOW ========================= -->
 <widget class="QMainWindow" name="MainWindow">

  <property name="geometry">
   <rect>
    <x>0</x>
    <y>0</y>
    <width>900</width>
    <height>650</height>
   </rect>
  </property>

  <property name="windowTitle">
   <string>Custom Python IDE</string>
  </property>

  <!-- ========================= CENTRAL EDITOR ========================= -->
  <widget class="QWidget" name="centralwidget">
   <layout class="QGridLayout">
    <item row="0" column="0">
     <!-- Custom Code Editor -->
     <widget class="CodeEditor" name="textEdit"/>
    </item>
   </layout>
  </widget>

  <!-- ========================= MENU BAR ========================= -->
  <widget class="QMenuBar" name="menubar">

   <!-- ================= FILE MENU ================= -->
   <widget class="QMenu" name="menuFile">
    <property name="title">
     <string>File</string>
    </property>

    <addaction name="actionNew"/>
    <addaction name="separator"/>
    <addaction name="actionOpen"/>
    <addaction name="separator"/>
    <addaction name="actionSave"/>
    <addaction name="actionSave_As"/>
    <addaction name="separator"/>
    <addaction name="actionClose"/>
    <addaction name="separator"/>
    <addaction name="actionExit"/>
   </widget>

   <!-- ================= EDIT MENU ================= -->
   <widget class="QMenu" name="menuEdit">
    <property name="title">
     <string>Edit</string>
    </property>

    <addaction name="actionUndo"/>
    <addaction name="actionRedo"/>
    <addaction name="separator"/>
    <addaction name="actionCut"/>
    <addaction name="actionCopy"/>
    <addaction name="actionPaste"/>
   </widget>

   <!-- ================= VIEW MENU ================= -->
   <widget class="QMenu" name="menuView">
    <property name="title">
     <string>View</string>
    </property>

    <!-- Theme submenu -->
    <widget class="QMenu" name="menuTheme">
     <property name="title">
      <string>Theme</string>
     </property>
     <addaction name="actionDark_Theme"/>
     <addaction name="actionLight_Theme"/>
    </widget>

    <!-- Font submenu -->
    <widget class="QMenu" name="menuFont_Size">
     <property name="title">
      <string>Font Size</string>
     </property>
     <addaction name="actionIncrease_font_size"/>
     <addaction name="actionDecrease_Font_Size"/>
    </widget>

    <addaction name="menuTheme"/>
    <addaction name="separator"/>
    <addaction name="menuFont_Size"/>
   </widget>

   <!-- ================= BUILD & DEBUG MENU ================= -->
   <widget class="QMenu" name="menuBuildDebug">
    <property name="title">
     <string>Build &amp; Debug</string>
    </property>

    <addaction name="actionBuildProject"/>
    <addaction name="actionRebuild"/>
    <addaction name="actionClean"/>
    <addaction name="actionBuildSolution"/>
    <addaction name="separator"/>
    <addaction name="actionStartDebugging"/>
    <addaction name="actionStartWithoutDebugging"/>
    <addaction name="separator"/>
    <addaction name="actionStopDebugging"/>
    <addaction name="actionRestartDebugging"/>
    <addaction name="actionAttachProcess"/>
   </widget>

   <!-- Add all menus to top bar -->
   <addaction name="menuFile"/>
   <addaction name="menuEdit"/>
   <addaction name="menuView"/>
   <addaction name="menuBuildDebug"/>

  </widget>

  <!-- ========================= STATUS BAR ========================= -->
  <widget class="QStatusBar" name="statusbar"/>

  <!-- ========================= ACTION DEFINITIONS ========================= -->

  <!-- FILE ACTIONS -->
  <action name="actionNew">
   <property name="text"><string>New</string></property>
   <property name="shortcut"><string>Ctrl+N</string></property>
  </action>

  <action name="actionOpen">
   <property name="text"><string>Open</string></property>
   <property name="shortcut"><string>Ctrl+O</string></property>
  </action>

  <action name="actionSave">
